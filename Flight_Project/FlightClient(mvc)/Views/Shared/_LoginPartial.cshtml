@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<ul class="navbar-nav">
    @{ 
        ViewBag.Data = @HttpContextAccessor.HttpContext.Session.GetString("Username");
        ViewBag.DataAd = @HttpContextAccessor.HttpContext.Session.GetString("Adminname");
    }
    @if (ViewBag.Data!=null)
    {
        <li class="nav-item">
                    
                    <a id="manage" class="nav-link text-dark" asp-controller="Profile" asp-action="ProfileDetail" title="Manage">Hello @ViewBag.Data!</a>
                </li>
        <li class="nav-item">
                    <a id="manage" class="nav-link text-dark" asp-controller="Booking" asp-action="BookingHistory" title="Manage">Booking History</a>
                </li>
                <li class="nav-item">
                    <form>
                        <button id="logout" type="submit" class="nav-link btn btn-link text-dark" asp-controller="Login" asp-action="Logout">Logout</button>
                    </form>
                </li>
    }
    else if(ViewBag.DataAd != null){
        <li class="nav-item">
                    
                    <a id="manage" class="nav-link text-dark" title="Manage">Hello @ViewBag.DataAd!</a>
                </li>
        <li class="nav-item">
                    <form>
                        <button id="logout" type="submit" class="nav-link btn btn-link text-dark" asp-controller="Admin" asp-action="Logout">Logout</button>
                    </form>
                </li>
    }
else
{
  <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-controller="Login" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-controller="Login" asp-action="login">Login</a>
        </li>
}


