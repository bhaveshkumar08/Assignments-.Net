@model FlightProject.Models.BFlight

@{
    ViewData["Title"] = "DeleteFlight";
}

<h1>Delete Flight</h1>

<h3>Are you sure you want to delete this Flight?</h3>
<div>
    <h4>Flight Details:</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FlightId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FlightId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Origin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Origin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Destination)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FlightName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FlightName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SeatAvailable)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SeatAvailable)
        </dd>
    </dl>
    
    <form asp-action="DeleteFlight" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="GetAllFlights">Back to Flights List</a>
    </form>
</div>
