@model IEnumerable<FlightProject.Models.BFlight>

@{
    ViewData["Title"] = "SearchResults";
}

<h1>Search Results</h1>

@{if(ViewBag.count == 0){<h5> :(  No Flights Available For The Provided Locations...</h5>}
else{
<p>
    <a asp-action="SearchFlights">Search</a>
</p>
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FlightId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Origin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departure)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Arrival)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeatAvailable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FlightId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Origin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departure)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Arrival)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlightName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeatAvailable)
            </td>
            <td>
                @if(item.SeatAvailable >= ViewBag.Seats){
                    @Html.ActionLink("Book Tickets", "BookingConfirm", "Booking", new { id=item.FlightId, seats = ViewBag.Seats })
                }
                else{
                    <p>Required Seats Are Not Available</p>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
}
}